{
  "name": "copy-as-uri",
  "displayName": "Copy as URI",
  "description": "Adds a command that copies the current file and line number as a VSCode-schema URI.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-as-uri.copyCurrentFileUri",
        "title": "Copy as URI"
      },
      {
        "command": "copy-as-uri.copyAsHyperlink",
        "title": "Copy as URI Hyperlink"
      }
    ],
    "menus": {
      "editor/context/copy": [
        {
          "command": "copy-as-uri.copyCurrentFileUri",
          "group": "copy",
          "when": "editorTextFocus"
        },
        {
          "command": "copy-as-uri.copyAsHyperlink",
          "group": "copy",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
